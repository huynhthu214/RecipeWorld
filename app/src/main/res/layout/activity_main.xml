<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity"
    android:background="#F5F5F5">

    <!-- TOOLBAR -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/app_toolbar"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="@drawable/bg_circle_white_translucent"
        android:elevation="4dp"
        app:title="Recipe World"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CONTENT CỦA BẠN (Đặt ở đây) -->

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/main_activity_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_toolbar"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <LinearLayout
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        android:background="@android:color/white"
        android:elevation="10dp"
        android:backgroundTint="#F77D00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageButton
                android:id="@+id/btn_home"
                style="@style/CookpadBottomNavButton"
                android:contentDescription="Trang Chủ"
                android:src="@drawable/ic_home" />

            <ImageButton
                android:id="@+id/btn_favorite"
                style="@style/CookpadBottomNavButton"
                android:src="@drawable/ic_favorite"
                android:contentDescription="Công Thức Đã Lưu" />

            <ImageButton
                android:id="@+id/btn_categories"
                style="@style/CookpadBottomNavButton"
                android:src="@drawable/ic_grid"
                android:contentDescription="Danh Mục" />

            <ImageButton
                android:id="@+id/btn_profile"
                style="@style/CookpadBottomNavButton"
                android:src="@drawable/ic_account"
                android:contentDescription="Trang Cá Nhân" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>